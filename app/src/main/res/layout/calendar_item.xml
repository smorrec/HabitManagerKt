<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2.5dp"
    android:layout_marginEnd="2.5dp"
    android:background="@drawable/background_selector_calendar"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weekDayName"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_selector_calendar_name"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weekDatValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@id/weekDayName"
        app:layout_constraintStart_toStartOf="@id/weekDayName"
        app:layout_constraintTop_toBottomOf="@id/weekDayName" />


</androidx.constraintlayout.widget.ConstraintLayout>