<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewMPA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/MPAndroidChart"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/licenseBtnMPA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/licenseBtnMPA"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_expand"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/textViewMPA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewMPA"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/contentMPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/textViewMPA"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/contentTxtMPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mpachart_license" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentMPA" />

        <TextView
            android:id="@+id/textViewAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/MaterialAbout"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/licenseBtnAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

            <ImageButton
                android:id="@+id/licenseBtnAbout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_expand"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/textViewAbout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewAbout"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/contentAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/textViewAbout"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/contentTxtAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_license" />
        </androidx.cardview.widget.CardView>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentMPA" />

        <TextView
            android:id="@+id/textViewStickers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/MaterialAbout"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/licenseBtnAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <ImageButton
            android:id="@+id/licenseBtnStickers"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_expand"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAbout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewAbout"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/contentStickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/textViewAbout"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/contentTxtStickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_license" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>